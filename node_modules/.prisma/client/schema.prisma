generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Denuncias {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  rua        String
  numero     Int
  Dia        DateTime
  bairro     String
  cidade     String
  obs        String
  created_by String
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  cpf      String
}
